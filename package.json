      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  },
  "now": {
    "alias": "ingresse-backend-dev.now.sh",
    "dotenv": ".env.production",
    "public": true
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
